#!/bin/bash


SCRIPT_FOLDER=$(realpath $(dirname "$0"))
cd $SCRIPT_FOLDER

WIDTH_PIXELS=1025
ROW_COUNT=6
COLUMN_COUNT=12
PROJECT_ROOT=$(dirname $(dirname $(realpath $0)))
VENV=$($PROJECT_ROOT/bash/print-venv-path.sh)

if [[ ! -d $VENV ]] ; then
    echo "Aborted. venv not setup: $VENV"
    exit 1
fi

cd $PROJECT_ROOT
$VENV/bin/python3 $PROJECT_ROOT/python3/generate-previews.py "$@"
